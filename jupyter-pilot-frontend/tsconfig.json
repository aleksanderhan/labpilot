{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strictNullChecks": false,
    "target": "es2018",
    "types": [],
    "strict": false,
    "skipLibCheck": true,
    "typeRoots" : ["node_modules/@types"],
  },
  "include": ["src/*"]
}
